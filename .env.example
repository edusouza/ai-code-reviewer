# Application Settings
DEBUG=true
APP_NAME=AI Code Reviewer
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Google Cloud Platform
PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
FIRESTORE_DATABASE=(default)
PUBSUB_TOPIC=code-reviews

# GitHub App Configuration
# Create a GitHub App at: https://github.com/settings/apps
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here
GITHUB_APP_ID=123456
GITHUB_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----
your-private-key-here
-----END RSA PRIVATE KEY-----

# GitLab Configuration
# Create a webhook in your GitLab project settings
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret
GITLAB_TOKEN=glpat-your-access-token

# Bitbucket Configuration
# Configure webhook in Bitbucket repository settings
BITBUCKET_WEBHOOK_SECRET=your-bitbucket-webhook-secret
BITBUCKET_USERNAME=your-bitbucket-username
BITBUCKET_APP_PASSWORD=your-app-password

# LLM Provider Settings (Vertex AI)
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Cost Optimization
MAX_TOKENS_PER_REVIEW=10000
ENABLE_COST_TRACKING=true

# Observability (Optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=
SENTRY_DSN=

# Feature Flags
ENABLE_LEARNING=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_COST_OPTIMIZATION=true
